if ARCH_TEGRA

# ---------------------------------------------------------

config ARCH_TEGRA_2x_SOC
	bool
	depends on 32BIT
	select CPU_V7

config ARCH_TEGRA_3x_SOC
	bool
	depends on 32BIT
	select CPU_V7

config ARCH_TEGRA_124_SOC
	bool
	depends on 32BIT
	select CPU_V7

config ARCH_TEGRA_234_SOC
	bool
	depends on 64BIT
	select CPU_V8
	select CPU_SUPPORTS_64BIT_KERNEL

menu "select Tegra boards to be built"

config MACH_TORADEX_COLIBRI_T20
	bool "Toradex Colibri T20"
	select ARCH_TEGRA_2x_SOC

config MACH_TOSHIBA_AC100
	bool "Toshiba AC100"
	select ARCH_TEGRA_2x_SOC

config MACH_NVIDIA_BEAVER
	bool "NVIDIA Beaver"
	select ARCH_TEGRA_3x_SOC
	select I2C
	select I2C_TEGRA

config MACH_NVIDIA_JETSON_234
	bool "NVIDIA Jetson on T234"
	select ARCH_TEGRA_234_SOC
	select I2C
	select I2C_TEGRA

endmenu

# ---------------------------------------------------------

endif
